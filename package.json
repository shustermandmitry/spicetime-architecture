{
  "name": "spicetime-architecture",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "docker:build:dev": "docker-compose -f docker-compose.dev.yml build",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:up:dev:detach": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:exec:app": "docker exec -it $(docker ps -q -f name=dev) sh",
    "docker:prune": "docker system prune -f --volumes",
    "docker:up:debug": "docker-compose -f docker-compose.dev.yml --profile dev-debug up",
    "docker:up:debug:detach": "docker-compose -f docker-compose.dev.yml --profile dev-debug up -d",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "docs:generate": "run-p docs:generate:*",
    "docs:generate:api": "typedoc",
    "docs:generate:graphql": "graphql-docs",
    "docs:generate:openapi": "redoc-cli bundle openapi.yaml",
    "docs:generate:diagrams": "c4builder",
    "docs:validate": "run-p docs:validate:*",
    "docs:validate:markdown": "markdownlint docs/**/*.md",
    "docs:validate:links": "markdown-link-check docs/**/*.md",
    "docs:dev": "gatsby develop",
    "docs:build": "gatsby build",
    "docs:serve": "gatsby serve",
    "docs:testGQL": "turbo run generate-all"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@graphql-tools/graphql-file-loader": "^8.0.8",
    "@graphql-tools/load": "^8.0.9",
    "axios": "^1.7.3",
    "zod": "^3.22.5"
  },
  "devDependencies": {
    "@graphql-tools/graphql-file-loader": "^8.0.9",
    "@graphql-tools/load": "^8.0.10",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@graphql-tools/utils": "^10.7.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@stoplight/spectral-cli": "^6.14.2",
    "@types/node": "^20.8.6",
    "c4builder": "^0.2.16",
    "get-graphql-schema": "^2.1.2",
    "gatsby": "^5.14.1",
    "gatsby-plugin-mdx": "^5.14.0",
    "gatsby-remark-mermaid": "^5.0.0",
    "gatsby-source-filesystem": "^5.14.0",
    "gatsby-theme-documentation": "^0.0.27",
    "graphql": "15.8.0",
    "graphql-docs": "^0.2.0",
    "markdown-link-check": "^3.13.6",
    "markdownlint-cli": "^0.43.0",
    "mermaid": "^11.4.1",
    "npm-run-all": "^4.1.5",
    "openapi-types": "^12.1.3",
    "redoc-cli": "^0.13.21",
    "remark-cli": "^12.0.1",
    "remark-lint": "^10.0.0",
    "remark-preset-lint-recommended": "^7.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.3.3",
    "typedoc": "^0.27.5",
    "typedoc-plugin-markdown": "^4.3.3",
    "typedoc-plugin-mermaid": "^1.12.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@8.7.0"
}