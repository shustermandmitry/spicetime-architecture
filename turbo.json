{
  "pipeline": {
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": ["src/**/*.{js,jsx,ts,tsx}", "test/**/*.{js,jsx,ts,tsx}", "tools/vite-config/vitest.setup.js"]
    },
    "dev": {
      "dependsOn": ["^generate-all"], 
      "cache": false
    },
    "build": {
      "dependsOn": ["^generate-all"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": ["src/**/*.{js,jsx,ts,tsx}", "**/*.json", ".eslintrc.json"]
    },
    "clean": {
      "outputs": [],
      "cache": false
    },
    "generate-all": {
      "outputs": ["src/generated/**"], 
      "cache": true,
      "inputs": ["schemas/**/*.graphql", "src/**/*.{ts,tsx}", "**/*.config.js"]
    }
  }
}