{
  "name": "content-aggregator",
  "version": "1.0.0",
  "main": "src/server/index.ts",
  "scripts": {
    "test": "pnpm exec vitest",
    "generate-types": "pnpm graphql-codegen --config codegen.yml",
    "generate-docs": "pnpm exec graphql-docs-gen -s ./src/shared/graphql/schema.gql -o docs",
    "generate-all": "pnpm run generate-types && pnpm run generate-docs",
    "generate-schema-json": "pnpm graphql-codegen --schema ./src/shared/graphql/schema.gql --target json --output ./src/shared/graphql/schema.json",
    "generate-resolvers": "pnpm graphql-codegen",
    "workflow:generate-docs": "node dist/index.js",
    "build": "pnpm tsc",
    "docs:generate": "pnpm typedoc"
  },
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "4.11.2",
    "@graphql-tools/graphql-file-loader": "8.0.8",
    "@graphql-tools/load": "8.0.9",
    "axios": "1.7.3",
    "prompts": "^2.4.2",
    "zod": "^3.22.5"
  },
  "peerDependencies": {
    "@apollo/server": "4.11.2",
    "@graphql-tools/graphql-file-loader": "8.0.8",
    "@graphql-tools/load": "8.0.9",
    "axios": "1.7.3",
    "zod": "^3.22.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@graphql-tools/utils": "^10.7.0",
    "@types/node": "^22.10.2",
    "get-graphql-schema": "^2.1.2",
    "vitest": "^2.1.8"
  }
}