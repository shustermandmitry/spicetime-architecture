{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    "target": "ESNext", // Best for modern JavaScript; supports latest features
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Adds DOM Iterables for modern compatibility
    "allowJs": true, // Enable if legacy JS files need to be used
    "skipLibCheck": true, // Speeds up builds by skipping type checks in node_modules
    "strict": true, // Enforces TypeScript's strict mode for high code quality
    "forceConsistentCasingInFileNames": true, // Detects filename casing mismatches
    "noEmit": true, // Prevents emitting JavaScript; works only as a type checker
    "incremental": true, // Improves type-checking speed with incremental builds
    "esModuleInterop": true, // Smooth interop with CommonJS modules
    "module": "ESNext", // Use ES module resolution
    "moduleResolution": "node", // Node resolution for module imports
    "resolveJsonModule": true, // Enables importing JSON files
    "isolatedModules": true, // Required for tools like Babel, Next.js, etc.
    "jsx": "preserve", // Ensures JSX is preserved for Next.js/Webpack
    "types": ["vitest/globals"], // Support for Vitest global test methods
    "baseUrl": ".", // Base path for absolute imports
    "paths": {
      "@/*": ["./src/*"] // Simplified alias for internal app paths
    },
    "composite": true, // Enables project references in monorepos
    "allowSyntheticDefaultImports": true, // Simplifies imports from CommonJS modules
    "emitDecoratorMetadata": false, // Add only if using class reflection (e.g., Angular)
    "experimentalDecorators": false // Only enable if decorators are used in experimental features
  },
  "include": [
    "**/*.d.ts", // Includes only type declarations
    "**/*.ts",   // Includes TypeScript files
    "**/*.tsx",  // Includes TypeScript files with JSX
    "../vite-config/base.js", // Include shared Vite config
    "../vite-config/vitest.setup.ts", // Include vitest setup
    ".next/types/**/*.ts" // Include Next.js-specific type definitions
  ],
  "exclude": [
    "node_modules", // Exclude dependencies
    "dist", // Exclude built files
    ".turbo", // Exclude TurboRepo cache
    ".next" // Exclude Next.js compiled files
  ]
}